<!--aqui listaremos nuestros enlaces-->
<div class="container p-4">
    <div class="row">
        <!-- con ese each recorro las lista que me esta dando el servidor, la propiedad target permite que cuando le demos click a ese enlace nos abre una nueva pestaÃ±a -->
        {{#each links}}
            <div class="col-md-3">
               <div class="card text-center">
                   <div class="card-body">
                       <a href="{{url}}" target="_blank">
                           <h3 class="card-title text-uppercase">
                               {{title}}
                           </h3>
                           <p class="m-2">{{description}}</p>
                           <!--el timeago es una funcion y el created_at es su argumento-->
                           <p>{{timeago created_at}}</p>
                           <a href="" class="btn btn-danger">Delete</a>
                           <a href="" class="btn btn-secondary">Edit</a>
                       </a>
                   </div>
               </div>     
            </div>
        {{/each}}
    </div>
</div>